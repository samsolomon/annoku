{
  "name": "relay-annotations",
  "version": "0.1.0",
  "description": "Standalone browser annotation overlay and HTTP annotation server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "annoku": "dist/mcp.js"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/mcp.js",
    "dev": "tsx src/mcp.ts",
    "test": "vitest run",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
